{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "outDir": "lib",
    "rootDir": "./src",
    "module": "CommonJS",
    "declaration": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "types": [
      "jest",
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ]
}
